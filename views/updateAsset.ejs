<%- include('layouts/header') %>

<% result.forEach(data => { %>
<div class="container mt-3 mb-3">
  <a href="/members/detail/<%= data.id_member%>" class="btn btn-outline-primary"><- Back</a>
</div>
<div class="container bg-light mt-4 py-3 px-5 text-center" style="width:35%;">
  <h4>Edit Data Asset</h4>
  <form class="mt-3" method="post" action="/assets/update/<%= data.id %>/<%= data.id_member %>">
    <div class="mb-3">
      <input type="text" class="form-control" name="nama_asset" placeholder="Nama Asset" value="<%= data.nama %>">
    </div>
    <div class="mb-3">
      <input type="number" class="form-control" name="harga_asset" placeholder="Harga Asset" value="<%= data.harga%>">
    </div>
    <button type="submit" class="btn btn-primary">Kirim</button>
  </form>
</div>
<% }); %>

<%- include('layouts/footer') %>
